<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/secondaryLightColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <EditText
            android:id="@+id/edit_text_user"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:hint="@string/username"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_text_password"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.52"/>

    <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:hint="@string/password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.457"
            app:layout_constraintHorizontal_bias="0.52"/>

    <Button
            android:id="@+id/button_login"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/sign_in"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_text_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_text_password" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_register" android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/button_register"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="@string/register"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="4dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_password"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_password" android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>