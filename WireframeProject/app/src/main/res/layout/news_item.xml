<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view" android:orientation="vertical"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_margin="8dp"
        android:layout_width="205dp"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/title_text"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image_view"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/image_view"
                android:layout_margin="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/body_text"
                android:src="@drawable/abstract_abstract_expressionism_art_2505693"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:layout_width="80dp"
                android:layout_height="105dp" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="47dp"
                app:layout_constraintTop_toTopOf="@+id/card_view"/>

        <TextView
                android:id="@+id/body_text"
                app:layout_constraintBottom_toBottomOf="@+id/image_view"
                app:layout_constraintLeft_toRightOf="@id/image_view"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="8dp"
                android:textSize="10sp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintVertical_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/title_text"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>